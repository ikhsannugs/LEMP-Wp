Include database

#!/bin/bash
sudo apt-get update
sudo apt-get install unzip
wget https://codeload.github.com/ikhsannugs/LEMP-Wp/zip/master
sudo unzip /master
sudo sed -i 's/nama-db/wordpressdb/g' /LEMP-Wp-master/webserver-db.sh
sudo sed -i 's/nama-pengguna/admin/g' /LEMP-Wp-master/webserver-db.sh
sudo sed -i 's/katasandi/abcd1234567890/g' /LEMP-Wp-master/webserver-db.sh
sudo sed -i 's/alamat/database-1.citrm16v9p2y.ap-southeast-1.rds.amazonaws.com/g' /LEMP-Wp-master/webserver-db.sh
sudo sed -i 's/\r$//g' /LEMP-Wp-master/webserver-db.sh
sudo chmod 500 /LEMP-Wp-master/webserver-db.sh
/bin/bash /LEMP-Wp-master/webserver-db.sh





Exclude database

#!/bin/bash
sudo apt-get update
sudo apt-get install unzip
wget https://codeload.github.com/ikhsannugs/LEMP-Wp/zip/master
sudo unzip /master
sudo chmod 500 /LEMP-wp-master/webserver-exdb.sh
/bin/bash /LEMP-Wp-master/webserver-exdb.sh

